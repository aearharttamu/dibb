<h1>Currencies</h1>

<p><a href="#currencies/new" class="btn btn-primary">Add Currency</a></p>

<div class="table-wrapper">

    <table id="currency-table" class="table table-striped" >
        <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% _.each( currencies, function( currency ) { %>
        <tr id="currency-id-<%= currency.id %>">
            <td><a href="#currencies/<%= currency.id %>/edit"><%= currency.name %></a></td>
            <td>
                <a href="#currencies/<%= currency.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                <% if( canDelete == true ) { %>
                <button href="#" class="btn delete-button btn-danger" data-role-id="<%= currency.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
                <% } %>
            </td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>
