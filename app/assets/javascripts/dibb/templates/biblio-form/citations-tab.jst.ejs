
<div class="table-wrapper">    
    <table id="citations-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Page Number</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( citations, function( citation ) { %>
        <tr id="citid-<%= citation.id %>">
            <td><%= citation.page_number %></td>
            <td><%= citation.title_name %></td>
            <td>
              <a href="#biblios/<%= biblio_id %>/citations/<%= citation.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <button href="#" class="btn delete-button btn-danger" data-citid="<%= citation.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

<p><a href="#biblios/<%= biblio_id %>/citations/new" class="btn btn-default">Add Citation</a></p>

</div>

