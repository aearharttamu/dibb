<%= partials.validationErrors({ validationErrors: validationErrors }) %>

<%= partials.stringInput({ 
  field_name: 'provenance', 
  field_title: 'Provenance of Bibliography', 
  field_value: biblio.provenance, 
  field_instructions: 'Indicate who owns the materials you are examining (ex: owned by Cushing; borrowed from Princeton University Library).', 
  error: _.has(validationErrors, 'provenance') 
}) %>

<%= partials.dropdownInput({
    field_name: 'pub_number_type',
    field_title: 'Publication Number Type',
    field_value: biblio.pub_number_type,
    field_instructions: 'What type of publication number are you referencing? ISSN or ISBN.',
    options: publicationNumberType,
    error: _.has(validationErrors, 'pagination')
}) %>

<%= partials.stringInput({
  field_name: 'pub_number', 
  field_title: 'Publication Number', 
  field_value: biblio.pub_number, 
  field_instructions: 'Consult the item to see whether an ISSN or ISBN is included.', 
  error: _.has(validationErrors, 'pub_number') 
}) %>


