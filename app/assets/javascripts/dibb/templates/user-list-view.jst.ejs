<h1>User Accounts</h1>

<div class="table-wrapper">    
  
  <table id="user-table" class="table table-striped" >
    <thead>
        <tr>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( users, function( user ) { %>
        <tr id="user-id-<%= user.id %>">
            <td><a href="#users/<%= user.id %>/edit"><%= user.email %></a></td>
            <td>
              <a href="#users/<%= user.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <button href="#" class="btn delete-button btn-danger" data-userid="<%= user.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
