<h1>User Accounts</h1>

<div class="table-wrapper">    
  
  <table id="user-table" class="table table-striped" >
    <thead>
        <tr>
            <th>User</th>
            <th>Last Signed In</th>
            <th>Enabled?</th>
            <th>Admin?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( users, function( user ) { %>
        <tr id="user-id-<%= user.id %>">
            <td><a href="#users/<%= user.id %>/edit"><%= user.email %></a></td>
            <td><%= user.last_sign_in_at %></td>
            <td><%= partials.checkMark({ value: user.enabled }) %></td>
            <td><%= partials.checkMark({ value: user.admin }) %></td>
            <td>              
              <% if( !user.enabled ) { %>
              <button data-userid='<%= user.id %>' class="btn btn-success enable-user-button"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Enable</button>              
              <% } %>
              <a href="#users/<%= user.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
