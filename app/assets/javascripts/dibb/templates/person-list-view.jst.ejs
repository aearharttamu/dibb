<h1>People</h1>

<p><a href="#people/new" class="btn btn-primary">Add Person</a></p>

<div class="table-wrapper">    
  
  <table id="person-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( people, function( person ) { %>
        <tr id="pid-<%= person.id %>">
            <td><a href="#people/<%= person.id %>/edit"><%= person.full_name %></a></td>
            <td>
              <a href="#people/<%= person.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <% if( canDelete == true ) { %>
              <button href="#" class="btn delete-button btn-danger" data-pid="<%= person.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
              <% } %>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
