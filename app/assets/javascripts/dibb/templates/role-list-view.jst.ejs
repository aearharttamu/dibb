<h1>Roles</h1>

<p><a href="#roles/new" class="btn btn-primary">Add Role</a></p>

<div class="table-wrapper">    
  
  <table id="role-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( roles, function( role ) { %>
        <tr id="role-id-<%= role.id %>">
            <td><a href="#roles/<%= role.id %>/edit"><%= role.name %></a></td>
            <td>
              <a href="#roles/<%= role.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <% if( canDelete == true ) { %>
              <button href="#" class="btn delete-button btn-danger" data-role-id="<%= role.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
              <% } %>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
