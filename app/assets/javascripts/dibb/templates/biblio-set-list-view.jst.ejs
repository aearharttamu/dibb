<h1>Bibliographies</h1>

<p><a href="#biblio_set/new" class="btn btn-primary">Add Bibliography</a></p>

<div class="table-wrapper">    
  
  <table id="biblio-set-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( biblio_sets, function( biblio_set ) { %>
        <tr id="bibid-<%= biblio_set.id %>">
            <td><a href="#biblio_set/<%= biblio_set.id %>/edit"><%= biblio_set.title %></a></td>
            <td><%= DiBB.helpers.formatGenre(biblio_set.genre, biblio_set.other_genre) %></td>
            <td>
              <a href="#biblio_set/<%= biblio_set.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <a href="#" class="btn delete-button btn-danger" data-bibid="<%= biblio_set.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
