<h1>Bibliographies</h1>

<p><a href="#biblio/new" class="btn btn-primary">Add Bibliography</a></p>

<div class="table-wrapper">    
  
  <table id="biblio-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Date</th>
            <th>Provenance</th>
            <th>PubNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( biblios, function( biblio ) { %>        
        <tr id="bibid-<%= biblio.id %>">
            <td><a href="#biblio/<%= biblio.id %>/edit"><%= biblio.title %></a></td>
            <td><%= biblio.genre %></td>
            <td><%= biblio.date %></td>
            <td><%= biblio.provenance %></td>
            <td><%= biblio.pubnumber %></td>
            <td>
              <a href="#biblio/<%= biblio.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <a href="#" class="btn delete-button btn-danger" data-bibid="<%= biblio.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
