<h1>Formats</h1>

<p><a href="#formats/new" class="btn btn-primary">Add Format</a></p>

<div class="table-wrapper">

    <table id="format-table" class="table table-striped" >
        <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% _.each( formats, function( format ) { %>
        <tr id="format-id-<%= format.id %>">
            <td><a href="#formats/<%= format.id %>/edit"><%= format.name %></a></td>
            <td>
                <a href="#formats/<%= format.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                <% if( canDelete == true ) { %>
                <button href="#" class="btn delete-button btn-danger" data-role-id="<%= format.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
                <% } %>
            </td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>
