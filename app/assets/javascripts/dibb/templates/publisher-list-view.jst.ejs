<h1>Publishers</h1>

<p><a href="#publishers/new" class="btn btn-primary">Add Publisher</a></p>

<div class="table-wrapper">    
  
  <table id="publisher-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( publishers, function( publisher ) { %>
        <tr id="pubid-<%= publisher.id %>">
            <td><a href="#publishers/<%= publisher.id %>/edit"><%= publisher.name %></a></td>
            <td>
              <a href="#publishers/<%= publisher.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
              <button href="#" class="btn delete-button btn-danger" data-pubid="<%= publisher.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
