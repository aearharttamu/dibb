<h1>Titles</h1>

<p><a href="#titles/new" class="btn btn-primary">Add Title</a></p>

<div class="table-wrapper">    
  
  <table id="title-table" class="table table-striped" >
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% _.each( titles, function( title ) { %>
        <tr id="title-id-<%= title.id %>">
            <td><a href="#titles/<%= title.id %>/edit"><%= title.name %></a></td>
            <td>
              <a href="#titles/<%= title.id %>/edit" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
               <% if( canDelete == true ) { %>
              <button href="#" class="btn delete-button btn-danger" data-titleid="<%= title.id %>" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
              <% } %>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
